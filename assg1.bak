#define BLACK_MAX 50
#define TURN_SPEED 50
#define STRAIGHT_SPEED 50
#define ROT_LEFT_PIV 50
#define ROT_RIGHT_PIV -50

void setup() {
     SetSensorLight(IN_1, true);
     Wait(500);
}

int countLeft(){
     int count = 0;
     OnFwdSync(OUT_BC, TURN_SPEED, ROT_LEFT_PIV);
     while(SENSOR_1 < BLACK_MAX){
       Wait(10);
       count++;
     }
     OffEx(OUT_BC, RESET_ALL);
     Wait(100);
     return count;
}

task main(){
     setup();
     int count = 0;

     OnFwdSync(OUT_BC, 50, -50);
     while(count >= 0){
     Wait(10);
     count--;

     }
     OffEx(OUT_BC, RESET_ALL);
}
